<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="popupDotMenu" >
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:popupBackground">@drawable/custom_dialog_rounded_corner</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:width">150dp</item>

    </style>



    <style name="customNumberPicker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/project_color</item>
        <item name="android:numbersSelectorColor">@color/project_color</item>
    </style>



    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#ffc317</item>
        <item name="colorControlNormal">#ececec</item>
    </style>


    <style name="NormalLeft_TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>
    <style name="NormalRight_TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/text_black</item>

        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>


    <style name="Bold_TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="Registration_TextView">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomRangeSeekbar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressTint">@color/project_color</item>
        <item name="android:thumbTint">@color/project_color</item>

    </style>

    <style name="MyCustomPopupMenu" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:width">300dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="MyCustomPopupMenu2" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:width">220dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:itemBackground">@color/white</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#cb2470</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#9e2e90</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">#ebebeb</item>
        <item name="colorControlActivated">#9e2e90</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
